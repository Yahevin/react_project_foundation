{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "styled-components"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@styled/*": [
        "src/styled-components/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
